<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.newHome.selfassessment.DifficultyBreathingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/go_back_button"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:src="@drawable/ic_keyboard_arrow_left_green_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coronavirus"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/progress"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:progress="18"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:text="2 / 11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Are you having difficulty breathing?"
            android:id="@+id/title"
            android:layout_margin="20dp"
            android:layout_below="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/please"
            android:layout_below="@+id/title"
            android:text="Please use the following as a guide"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/mild"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/please"
            android:text="@string/mild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/moderate"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/mild"
            android:text="@string/moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/severe"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/moderate"
            android:text="@string/severe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/severe"
            android:textAllCaps="false"
            android:id="@+id/mild_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_corners_blue"
            android:text="No or mild difficulty"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <Button
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/mild_button"
            android:textAllCaps="false"
            android:id="@+id/moderate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_corners_blue"
            android:text="Moderate difficulty"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <Button
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/moderate_button"
            android:textAllCaps="false"
            android:id="@+id/severe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_corners_blue"
            android:text="Severe difficulty"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
