<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardElevation="8dp"
    android:layout_margin="4dp"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/doctor_image"
        android:src="@drawable/ic_illustration_upload_inital_state"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/doctor_ll"
        android:layout_toEndOf="@+id/doctor_image"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:text="Dr.Dominic Tabu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="4dp"
            android:src="@drawable/ic_videocam_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_toEndOf="@+id/doctor_image"
        android:layout_below="@+id/doctor_ll"
        android:id="@+id/speciality_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:id="@+id/doctor_title"
        android:layout_marginStart="8dp"
        android:text="General Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<!--        <ImageView-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:id="@+id/view_doc_btn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="4dp"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            app:srcCompat="@drawable/ic_keyboard_arrow_right_orange_24dp" />-->
    </LinearLayout>

    <View
        android:layout_margin="8dp"
        android:id="@+id/view"
        android:layout_below="@+id/speciality_ll"
        android:layout_toEndOf="@+id/doctor_image"
        android:background="@color/shiny_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginBottom="8dp"
        android:textColor="@color/shiny_grey"
        android:layout_toEndOf="@+id/doctor_image"
        android:layout_below="@+id/view"
        android:layout_marginStart="8dp"
        android:text="Available now by video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <TextView-->
<!--        android:layout_toStartOf="@+id/view_doc_btn"-->
<!--        android:layout_below="@+id/doctor_image"-->
<!--        android:ellipsize="end"-->
<!--        android:maxLines="3"-->
<!--        android:text="@string/upload_step_1_body"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->


    </RelativeLayout>

</androidx.cardview.widget.CardView>