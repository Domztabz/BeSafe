<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/newHomeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ke.co.visualdiagnoser.besafe.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_selfIsolate"
            app:destination="@id/uploadMasterFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_homeFragment_to_peekActivity"
            app:destination="@id/peekActivity" />
    </fragment>

    <fragment
        android:id="@+id/uploadMasterFragment"
        android:name="ke.co.visualdiagnoser.besafe.ui.upload.UploadContainerFragment"
        tools:layout="@layout/fragment_upload_master" />

    <fragment
        android:id="@+id/helpFragment"
        android:name="ke.co.visualdiagnoser.besafe.ui.home.HelpFragment"
        android:label="HelpFragment"
        tools:layout="@layout/fragment_help"/>
    <activity
        android:id="@+id/peekActivity"
        android:name="ke.co.visualdiagnoser.besafe.PeekActivity"
        android:label="PeekActivity" />
    <fragment
        android:id="@+id/newHomeFragment"
        android:name="ke.co.visualdiagnoser.besafe.ui.home.newHome.NewHomeFragment"
        android:label="fragment_new_home"
        tools:layout="@layout/fragment_new_home" >
        <action
            android:id="@+id/action_newHomeFragment_to_uploadMasterFragment"
            app:destination="@id/uploadMasterFragment" />
    </fragment>

</navigation>
